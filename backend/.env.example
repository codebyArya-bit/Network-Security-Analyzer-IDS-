# Network Security Analyzer Backend Environment Configuration

# Application Environment
ENVIRONMENT=production
# Options: development, production, testing

# Server Configuration
PORT=8000
HOST=0.0.0.0

# Frontend URL (for CORS)
FRONTEND_URL=https://your-frontend-domain.com
# For development: http://localhost:5173
# For production: https://network-security-analyzer-ids.onrender.com
# Production: https://your-frontend-domain.com

# Database Configuration (if using a database)
# DATABASE_URL=postgresql://user:password@localhost:5432/network_security_db
# DATABASE_URL=sqlite:///./network_security.db

# API Keys for Threat Intelligence Services
# AbuseIPDB API Key (for IP reputation checks)
ABUSEIPDB_API_KEY=your_abuseipdb_api_key_here

# VirusTotal API Key (for malware and threat detection)
VIRUSTOTAL_API_KEY=your_virustotal_api_key_here

# Geolocation API Key (optional, using free service by default)
GEOLOCATION_API_KEY=your_geolocation_api_key_here

# Security Configuration
# JWT Secret Key (if implementing authentication)
JWT_SECRET_KEY=your_super_secret_jwt_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Logging Configuration
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

LOG_FILE=logs/network_security_analyzer.log

# Redis Configuration (for caching and session management)
# REDIS_URL=redis://localhost:6379/0
# REDIS_PASSWORD=your_redis_password

# Email Configuration (for notifications)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_FROM_EMAIL=noreply@yourdomain.com

# Webhook URLs (for external integrations)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# Scanning Configuration
MAX_CONCURRENT_SCANS=10
DEFAULT_SCAN_TIMEOUT=30
MAX_PORTS_PER_SCAN=1000
MAX_HOSTS_PER_DISCOVERY=254

# Security Headers
SECURE_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000

# CORS Configuration
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=86400

# Development Settings
DEBUG=false
RELOAD=false

# Production Settings
# Set these in production environment
# ENVIRONMENT=production
# DEBUG=false
# RELOAD=false
# LOG_LEVEL=WARNING