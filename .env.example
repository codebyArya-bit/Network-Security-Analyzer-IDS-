# SecureNet Analyzer Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# API Configuration
# =============================================================================

# Backend API Base URL (for when connecting to FastAPI backend)
# Currently using mock data, but will be needed for production
VITE_API_BASE_URL=http://localhost:8000/api/v1

# =============================================================================
# External Service API Keys
# =============================================================================

# AbuseIPDB API Key for threat intelligence
# Get your free API key at: https://www.abuseipdb.com/api
# Used for IP reputation checking and threat intelligence
VITE_ABUSEIPDB_API_KEY=your_abuseipdb_api_key_here

# =============================================================================
# Security Configuration
# =============================================================================

# JWT Secret for authentication (when backend is implemented)
VITE_JWT_SECRET=your_jwt_secret_here

# Session timeout in minutes
VITE_SESSION_TIMEOUT=60

# =============================================================================
# Development Configuration
# =============================================================================

# Development server port
VITE_PORT=8080

# Enable debug mode
VITE_DEBUG=true

# =============================================================================
# Email Configuration (for alerts and notifications)
# =============================================================================

# SMTP settings for email alerts
VITE_SMTP_HOST=smtp.gmail.com
VITE_SMTP_PORT=587
VITE_SMTP_USER=your_email@gmail.com
VITE_SMTP_PASS=your_app_password

# =============================================================================
# Database Configuration (for when backend is implemented)
# =============================================================================

# Database connection string
VITE_DATABASE_URL=postgresql://user:password@localhost:5432/securenet

# =============================================================================
# Monitoring and Analytics
# =============================================================================

# Google Analytics tracking ID (optional)
VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking (optional)
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# Feature Flags
# =============================================================================

# Enable real-time features
VITE_ENABLE_REALTIME=true

# Enable AI features
VITE_ENABLE_AI_FEATURES=true

# Enable threat intelligence
VITE_ENABLE_THREAT_INTEL=true